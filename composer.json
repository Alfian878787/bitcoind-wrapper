{
    "name": "rotemgrim/bitcoind-wrapper",
    "description": "Highlevel PHP wrapper around bitcoind",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Rotem Grim",
            "email": "rotemgrim@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6",
        "nbobtc/bitcoind-php": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5",
        "symfony/var-dumper": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "BitcoinWrapper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit -c phpunit.xml --coverage-text --verbose"
    }
}
